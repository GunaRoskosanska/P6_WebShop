@model List<ItemModel>
@{
    ViewData["Title"] = "MyCart";
}

@if (Model.Count == 0)
{
    <h3>Your cart is empty!</h3>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Item name</th>
            <th>Item price</th>
            <th>Item count</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th>@item.Price</th>
                <th>@item.Count</th>
                <td><a asp-controller="Item" asp-action="DeleteFromCart" asp-route-id="@item.Id">Dzēst</a></td>
            </tr>
        }
    </table>
   <p><a class="btn btn-primary" role="button" asp-controller="Account" asp-action="Confirm">Pirkuma apstiprināšana</a></p>
}